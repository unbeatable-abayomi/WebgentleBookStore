
@{
    ViewData["Title"] = "AddNewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BookModel

<h1>AddNewBook</h1>

<h2>Hello from form view</h2>

<div class="container">
    <h3 class="display-4">Add New Book </h3>
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-action="AddNewBook" asp-controller="Book">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control"  />
                </div>
              <div class="form-group">
                <label asp-for="TotalPages"></label>
                <input asp-for="TotalPages" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>

            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-primary" />
        </div>

        </form>
    </div>
    </div>
</div>

